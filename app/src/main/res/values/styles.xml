<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/appBackground1</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:textColor">@color/textColorWhite1</item>
        <item name="android:textColorSecondary">@color/textColorWhite2</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/textColorWhite1</item>
        <item name="android:textColorSecondary">@color/textColorWhite2</item>
    </style>

    <style name="TvHeadline" >

        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">sans-serif-black</item>

    </style>
    <style name="TvHeadline1" >

        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">@dimen/textSize28</item>
        <item name="fontFamily">sans-serif-smallcaps</item>

    </style>

    <style name="TvNormal">
        <item name="android:textColor">@color/textColorWhite1</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TvSmall">
        <item name="android:textColor">@color/textColorWhite2</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>

</resources>